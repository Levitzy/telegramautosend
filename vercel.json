{
  "version": 2,
  "builds": [
    { "src": "userbot.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(start|stop|send-once|status|settings|runs(/.*)?)", "dest": "/userbot.py" },
    { "src": "/auth/(send-code|verify|logout|session)", "dest": "/userbot.py" },
    { "src": "/favicon.ico", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
